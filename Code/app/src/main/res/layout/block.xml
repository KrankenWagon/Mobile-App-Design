    Program Name:   Blood Bowl Calculator-->

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="#333">

    <TableRow android:layout_weight="0">
        <TextView
            android:layout_weight="1"
        />
        <Button
            android:id="@+id/skills"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#900"
            android:text="Skills"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="16dp"

            android:onClick="skills"
        />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:text="Attacker"
            android:textSize="48sp"
            android:textColor="#fff"
            android:layout_marginLeft="24dp"
        />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Strength:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <EditText
            android:gravity="center"
            android:id="@+id/attStr"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textSize="36sp"
            android:layout_marginRight="16sp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Support:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <EditText
            android:gravity="center"
            android:id="@+id/attSup"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textSize="36sp"
            android:layout_marginRight="16sp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:text="Defender"
            android:textSize="48sp"
            android:textColor="#fff"
            android:layout_marginLeft="24dp"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Strength:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <EditText
            android:gravity="center"
            android:id="@+id/defStr"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textSize="36sp"
            android:layout_marginRight="16sp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Support:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <EditText
            android:gravity="center"
            android:id="@+id/defSup"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textSize="36sp"
            android:layout_marginRight="16sp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="#900"
            android:text="Calculate"
            android:textSize="28sp"
            android:textColor="#fff"
            android:padding="10dp"

            android:onClick="calculateBlock"
        />
    </TableRow>


</TableLayout>