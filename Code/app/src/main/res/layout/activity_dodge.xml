    Program Name:   Blood Bowl Calculator-->

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="#333">

    <TableRow android:layout_weight="0">
        <TextView
            android:layout_weight="1"
            android:text="Dodge"
            android:textSize="48sp"
            android:textColor="#fff"

            android:layout_margin="24dp"
            />
        <Button
            android:id="@+id/block"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#900"
            android:text="Skills"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="16dp"

            android:onClick="block"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Agility:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
        />
        <EditText
            android:gravity="center"
            android:id="@+id/agBox"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textColor="#fff"
            android:textSize="36sp"
            android:layout_marginRight="16dp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
    <TextView
        android:layout_weight="1"
        android:text="Tackle Zones:"
        android:textSize="36sp"
        android:textColor="#fff"
        android:layout_marginLeft="42dp"
        />
        <EditText
            android:gravity="center"
            android:id="@+id/tzBox"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:text="3"
            android:textColor="#fff"
            android:textSize="36sp"
            android:layout_marginRight="16dp"

            android:background="#555"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Titchy:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <CheckBox
            android:id="@+id/titchyButton"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"

            android:buttonTint="#900"
            android:checked="false"
        />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Two Heads:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <CheckBox
            android:id="@+id/thButton"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"

            android:buttonTint="#900"
            android:checked="false"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Prehensile Tail:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <CheckBox
            android:id="@+id/tailButton"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"

            android:buttonTint="#900"
            android:checked="false"
            />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:text="Diving Tackle:"
            android:textSize="36sp"
            android:textColor="#fff"
            android:layout_marginLeft="42dp"
            />
        <CheckBox
            android:id="@+id/dtButton"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"

            android:buttonTint="#900"
            android:checked="false"
            />
    </TableRow>
    <TableRow android:layout_weight="1"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="#900"
            android:text="Calculate"
            android:textSize="28sp"
            android:textColor="#fff"
            android:padding="10dp"

            android:onClick="calculateDodge"
        />
    </TableRow>


</TableLayout>